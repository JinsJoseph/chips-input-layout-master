<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CircleImageView">
        <attr name="borderWidth" format="dimension"/>
        <attr name="borderColor" format="color"/>
        <attr name="fillColor" format="color"/>
        <attr name="borderOverlay" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="MaxHeightScrollView">
        <attr name="android:maxHeight"/>
    </declare-styleable>

    <declare-styleable name="ChipsInputLayout">
        <attr name="android:hint"/>
        <attr name="android:textColorHint"/>
        <attr name="android:textColor"/>
        <attr name="detailedChipsEnabled" format="boolean" />
        <attr name="customChipsEnabled" format="boolean"/>
        <attr name="maxRows" format="integer" />

        <attr name="chipTextColor" format="color" />
        <attr name="chipHasAvatarIcon" format="boolean" />
        <attr name="chipDeletable" format="boolean" />
        <attr name="chipDeleteIcon" format="reference" />
        <attr name="chipDeleteIconColor" format="color" />
        <attr name="chipBackgroundColor" format="color" />

        <attr name="detailedChipTextColor" format="color" />
        <attr name="detailedChipBackgroundColor" format="color" />
        <attr name="detailedChipDeleteIconColor" format="color" />

        <attr name="filterableListBackgroundColor" format="color" />
        <attr name="filterableListTextColor" format="color" />
        <attr name="filterableListElevation" format="dimension"/>
    </declare-styleable>
</resources>